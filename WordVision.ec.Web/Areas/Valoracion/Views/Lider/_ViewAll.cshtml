@using WordVision.ec.Web.Areas.Valoracion.Models
@model IEnumerable<PlanificacionResultadoViewModel>
<table id="colaboradorTable" class="table table-striped " width="100%" height="100%" cellspacing="0">
    <thead>
        <tr>

            <th data-priority="1">Colaborador</th>
            <th  data-priority="1">Fecha Ingreso</th>
            <th  data-priority="1">Estado</th>
            @if(Model.FirstOrDefault().Estado==5  || Model.FirstOrDefault().Estado==6)
            {
                 <th data-priority="1">Valor Valoración</th>
                <th data-priority="1">Valoración</th>
                <th data-priority="1">Valoracion Lider 1</th>
                <th data-priority="3">Comentario</th>
                <th data-priority="3">Comentario Lider 1</th>
                <th data-priority="3">Comentario Lider 2</th>
                <th data-priority="3">Comentario Lider Matricial</th>
            }
           
            <th data-priority="2">Revisar Valoración</th>
           <th data-priority="2">Reaperturar Valoración</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var colaborador in Model)
        {
        <tr>

            <td>
                @colaborador.NombreColaborador
            </td>
             <td>
                @colaborador.FechaIngreso.Value.ToShortDateString()
            </td>
            <td>
                @colaborador.DescEstado
            </td>
                @if(Model.FirstOrDefault().Estado==5 || Model.FirstOrDefault().Estado==6)
                {
                    <td>
                        @colaborador.ValorValoracionFinal
                    </td>
                     <td>
                        @colaborador.ValoracionFinal
                    </td>
                     <td>
                        @colaborador.ValoracionLider1
                    </td>
                     <td>
                        @colaborador.ComentarioColaborador
                    </td>
                     <td>
                        @colaborador.ComentarioLider1
                    </td>
                     <td>
                        @colaborador.ComentarioLider2
                    </td>
                     <td>
                        @colaborador.ComentarioLiderMatricial
                    </td>
                }
                
            <td>
                <a type="button" asp-area="Valoracion" asp-page="/Objetivo/Wizard/Index" asp-route-id="@colaborador.IdColaborador" asp-route-perfil="1" asp-route-anioFiscal="@colaborador.AnioFiscal" class="btn btn-primary"><i class="fas fa-eye"></i></a>
            </td>
            <td>
                <form id="form_delete_@colaborador.Id" asp-controller="Objetivo" method="post" asp-action="OnPostAbrirValoracion" asp-route-idColaborador="@colaborador.IdColaborador" asp-route-anioFiscal="@colaborador.AnioFiscal"  asp-route-estado="3"  onsubmit="return jQueryModalController(this)" class="d-inline">
                                <a  type="button" href="javascript:$('#form_delete_@colaborador.Id').submit();" class="btn btn-info"><i class="fa fa-folder-open-o"></i> </a>
                </form>
            </td>

        </tr>
        }
    </tbody>
</table>
<script>
   
    $(document).ready(function () {
        var table=  $("#colaboradorTable").DataTable({
            aoColumnDefs: [
                { "aTargets": [0], "bSortable": true },
                { "aTargets": [2], "asSorting": ["asc"], "bSortable": true },
            ],
            "language": {
                "url": "../lib/datatables/language/Spanish.json"
            },
            
            scrollY: '50vh',
            scrollCollapse: true,
            responsive: true,
            columnDefs: [
                { responsivePriority: 1, targets: 0 },
                { responsivePriority: 2, targets: -1 }
            ],
            "info": false
            //columnDefs: [
            //    { responsivePriority: 1, targets: 0 },
            //    { responsivePriority: 10001, targets: 4 },
            //    { responsivePriority: 2, targets: -2 }
            //]
        });

     

    });
</script>
