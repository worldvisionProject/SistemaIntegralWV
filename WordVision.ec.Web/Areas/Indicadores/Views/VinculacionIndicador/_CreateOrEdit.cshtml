@model WordVision.ec.Web.Areas.Indicadores.Models.VinculacionIndicadorViewModel

<div class="row">
    <div class="col-md-12">
        <form id="create-form" asp-action="OnPostCreateOrEdit" method="post" asp-controller="VinculacionIndicador" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden="hidden" asp-for="Id"/>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Riesgos" class="control-label"></label>
                        <input asp-for="Riesgos" class="form-control" />
                        <span asp-validation-for="Riesgos" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlanNacionalDesarrollo" class="control-label">Plan Nacional Desarrollo</label>
                        <input asp-for="PlanNacionalDesarrollo" class="form-control" />
                        <span asp-validation-for="PlanNacionalDesarrollo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CWB" class="control-label"></label>
                        <input asp-for="CWB" class="form-control" />
                        <span asp-validation-for="CWB" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdIndicadorPR" class="control-label">Indicador PR</label>
                        @Html.DropDownList("IdIndicadorPR", (IEnumerable<SelectListItem>)Model.IndicadorPRList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                        <span asp-validation-for="IdIndicadorPR" class="text-danger"></span>
                    </div>
                    @if (Model.Id != 0)
                    {
                        <div class="form-group">
                                <label asp-for="IdEstado" class="control-label">Estado</label>
                            @Html.DropDownList("IdEstado", (IEnumerable<SelectListItem>)Model.EstadoList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                            <span asp-validation-for="IdEstado" class="text-danger"></span>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    <div class="overflow-auto" style="max-height:500px">
                        <ul class="list-group" id="DistributionListSelectIDLG" role="group" aria-labelledby="SeletDistributionListLabel">
                            @for (var i = 0; i < Model.OtrosIndicadores.Count; i++)
                            {
                                <li class="list-group-item">
                                    <input type="checkbox" asp-for="@Model.OtrosIndicadores[i].Selected"  />
                                    <label asp-for="@Model.OtrosIndicadores[i].Selected">@Model.OtrosIndicadores[i].Descripcion</label>
                                    <input type="hidden" asp-for="@Model.OtrosIndicadores[i].Id" />
                                    <input type="hidden" asp-for="@Model.OtrosIndicadores[i].Descripcion" />   

                                </li>
                            }
                        </ul>
                    </div>
                    <div class="form-group">
                       @* <ul>
                            @for (var i = 0; i < Model.OtrosIndicadores.Count; i++)
                            {
                                <li>       
                                    <input type="checkbox" asp-for="@Model.OtrosIndicadores[i].Selected"  />
                                    <label asp-for="@Model.OtrosIndicadores[i].Selected">@Model.OtrosIndicadores[i].Descripcion</label>
                                    <input type="hidden" asp-for="@Model.OtrosIndicadores[i].Id" />
                                    <input type="hidden" asp-for="@Model.OtrosIndicadores[i].Descripcion" />                
                                </li>
                            }
                        </ul>*@
                        @*<label asp-for="IdOtroIndicador" class="control-label">Otro Indicador</label>
                        @Html.DropDownList("IdOtroIndicador", (IEnumerable<SelectListItem>)Model.OtroIndicadorList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                        <span asp-validation-for="IdOtroIndicador" class="text-danger"></span>*@
                    </div>
                </div>
            </div>
            
            
            
            <br />
            <div class="form-group justify-content-between group-button-modal">
                <button type="submit" class="btn btn-success">Guardar</button>
                <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancelar</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
