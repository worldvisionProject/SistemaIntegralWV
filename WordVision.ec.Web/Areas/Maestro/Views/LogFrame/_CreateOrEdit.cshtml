@model WordVision.ec.Web.Areas.Maestro.Models.LogFrameViewModel

<form id="create-form" method="post" asp-controller="LogFrame" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden="hidden" asp-for="Id"/>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdProyectoTecnico" class="control-label">Proyecto Técnico</label>
                @Html.DropDownList("IdProyectoTecnico", (IEnumerable<SelectListItem>)Model.ProyectoTecnicoList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                <span asp-validation-for="IdRubro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutCome" class="control-label"></label>
                <input asp-for="OutCome" class="form-control" />
                <span asp-validation-for="OutCome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutPut" class="control-label"></label>
                <input asp-for="OutPut" class="form-control" />
                <span asp-validation-for="OutPut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity" class="control-label"></label>
                <input asp-for="Activity" class="form-control" />
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="IdNivel" class="control-label">Nivel</label>
                @Html.DropDownList("IdNivel", (IEnumerable<SelectListItem>)Model.NivelList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                <span asp-validation-for="IdNivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SumaryObjetives" class="control-label">Sumary/Objetives</label>
                <textarea asp-for="SumaryObjetives" class="form-control" rows="2"></textarea>
                <span asp-validation-for="SumaryObjetives" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
