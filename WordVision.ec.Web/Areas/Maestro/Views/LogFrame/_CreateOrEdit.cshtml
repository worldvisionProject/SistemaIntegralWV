            <div id="containerActividad">
                <div class="form-group">
                <label asp-for="Cobertura" class="control-label">Cobertura</label>
                <input asp-for="Cobertura" class="form-control" />
                <span asp-validation-for="Cobertura" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="IdTipoActividad" class="control-label">TipoActividad</label>
                    @Html.DropDownList("IdTipoActividad", (IEnumerable<SelectListItem>)Model.TipoActividadList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                    <span asp-validation-for="IdTipoActividad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdSectorProgramatico" class="control-label">Sector Programatico</label>
                    @Html.DropDownList("IdSectorProgramatico", (IEnumerable<SelectListItem>)Model.SectorProgramaticoList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                    <span asp-validation-for="IdSectorProgramatico" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdRubro" class="control-label">Rubros</label>
                    @Html.DropDownList("IdRubro", (IEnumerable<SelectListItem>)Model.RubroList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                    <span asp-validation-for="IdRubro" class="text-danger"></span>
                </div>
            </div>
            

            @if (Model.Id != 0)
            {
                <div class="form-group">
                    <label asp-for="IdEstado" class="control-label">Estado</label>
                    @Html.DropDownList("IdEstado", (IEnumerable<SelectListItem>)Model.EstadoList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                    <span asp-validation-for="IdEstado" class="text-danger"></span>
                </div>
            }
        </div>
    </div>

    <br />
    <div class="form-group justify-content-between group-button-modal">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-default close-button" data-dismiss="modal">Cancelar</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $.validator.unobtrusive.parse(document);
        $('#create-form').disableAutoFill();

        $("#IdNivel").click(function() {

            let nivel = $(this).val();
            MostrarContainers(nivel);
          
        });

        MostrarContainers($("#IdNivel option:selected").val());
      
    });

